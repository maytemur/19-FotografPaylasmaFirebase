<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recyler_satir_kullanici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kullanici Emaili"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#09189A"
        >
    </TextView>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_margin="7dp"
        android:id="@+id/recycler_satir_imageview"
        >
    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanici Yorumu"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#09189A"
        android:id="@+id/recycler_satir_kullanici_yorum"

        >
    </TextView>
</LinearLayout>